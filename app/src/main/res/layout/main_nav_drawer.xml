<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/height_main_icon"
        android:layout_margin="@dimen/padding_16dp"
        android:src="@drawable/note"/>

    <androidx.appcompat.widget.AppCompatCheckedTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/name_of_app"
        style="@style/ToolbarStyle"
        android:textAlignment="center"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="@dimen/padding_16dp"
        android:layout_marginBottom="@dimen/padding_16dp"
        android:background="@color/green"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:id="@+id/home_linearLayout"
        android:background="@drawable/frame_layout_style">
        
        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/home"
            style="@style/NoteStyle"
            android:padding="@dimen/padding_12dp"
            android:layout_marginStart="@dimen/padding_16dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_end_48dp"
            android:padding="@dimen/padding_16dp"
            android:src="@drawable/ic_baseline_home_24"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/frame_layout_style"
        android:layout_marginTop="@dimen/default_margin">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/options"
            android:padding="@dimen/padding_12dp"
            style="@style/NoteStyle"
            android:layout_marginStart="@dimen/padding_16dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_end_48dp"
            android:padding="@dimen/padding_16dp"
            android:src="@drawable/ic_baseline_build_24"/>

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_gravity="center_vertical"
        android:background="@drawable/frame_layout_style"
        android:layout_marginTop="@dimen/default_margin">

        <com.google.android.material.textview.MaterialTextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="@string/about_us"
            style="@style/NoteStyle"
            android:padding="@dimen/padding_12dp"
            android:layout_marginStart="@dimen/padding_16dp"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/margin_end_48dp"
            android:padding="@dimen/padding_16dp"
            android:src="@drawable/ic_baseline_info_24"/>

    </LinearLayout>



</LinearLayout>